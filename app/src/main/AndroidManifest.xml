<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.arkadzi.imho">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".presentation.login.LoginActivity"
            android:theme="@style/AppTheme.Dark.NoActionBar"/>

        <activity android:name=".presentation.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.profile.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar.Translucent" />
        <activity
            android:name=".presentation.base.LabContentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.labs.LabsActivity" />
        <activity android:name=".presentation.labs.LecturersActivity" />
        <activity android:name=".presentation.lab_content.LabPriorityActivity" />
        <activity android:name=".presentation.diploma.DiplomaActivity" />
    </application>

</manifest>